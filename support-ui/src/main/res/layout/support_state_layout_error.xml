<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.ContentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/stateLinearContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/stateLayoutErrorImage"
            android:layout_width="@dimen/avatar_size_xl"
            android:layout_height="@dimen/avatar_size_xl"
            android:layout_gravity="center"
            tools:src="@drawable/ic_support_empty_state" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lg_margin" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xl_margin"
            android:layout_marginEnd="@dimen/xl_margin">

            <co.anitrend.arch.ui.view.text.SingleLineTextView
                android:id="@+id/stateLayoutErrorHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lg_margin"
                android:layout_marginEnd="@dimen/lg_margin"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="Resource Not Found" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lg_margin" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/stateLayoutErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="Seems like the server is currently offline" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lg_margin" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stateLayoutErrorRetryAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="?colorAccent"
                tools:text="Retry"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.ContentFrameLayout>
