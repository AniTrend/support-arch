<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SupportTheme.FontFamily" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SupportTheme.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/SupportTheme.ToolbarTitleAppearance</item>
    </style>

    <style name="SupportTheme.ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SupportTheme.PopupTheme" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupElevation">@dimen/lg_margin</item>
    </style>

    <style name="SupportTheme.Translucent">
        <item name="android:windowBackground">@color/colorScrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="SupportTheme.WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="SupportTheme.DialogStyle" parent="SupportTheme.Dialog">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="colorAccent">?colorAccent</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">?colorPrimaryText</item>
        <item name="android:windowTitleStyle">?textAppearanceHeadline6</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>